#include <stdio.h>
int main (){
   int reversed_digit, sum=0, number;
   printf ("Enter the number you want to sum its digit:");
   scanf("%i",&number);
   
 while( number != 0){
     reversed_digit=number%10;
     sum+=reversed_digit;
     number /=10 ;
 }
printf ("The sum of the digits is %i", sum);
 return 0;
}